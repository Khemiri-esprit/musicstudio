<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="10" alignment="CENTER" xmlns:fx="http://javafx.com/fxml"
      fx:controller="asm.org.MusicStudio.controllers.ProfileViewController">
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label fx:id="nameLabel" text="Name:" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
    <TextField fx:id="nameField" maxWidth="300"/>
    
    <Label fx:id="emailLabel" text="Email:" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
    <TextField fx:id="emailField" maxWidth="300"/>
    
    <Label fx:id="roleLabel" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
    
    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="saveButton" text="Save Changes" onAction="#saveProfileChanges" 
                style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
        <Button text="Change Password" onAction="#showChangePasswordDialog"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
    </HBox>
</VBox>